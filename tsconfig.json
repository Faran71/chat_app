{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ES6",
		"moduleResolution": "node",
		"jsx": "react-jsx",
    	"lib": ["dom", "esnext"],
    	"esModuleInterop": true,
    	"skipLibCheck": true
	},
	"include": [
		"./backend/**/*",
		"./frontend/**/*",
		"./scripts/**/*",
		"./shared/**/*"
	]
}